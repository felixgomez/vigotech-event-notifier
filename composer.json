{
  "name": "vigotech/event-notifier",
  "license": "MIT",
  "type": "project",
  "description": "Command line utility for fetching Vigotech events and send messages via included notifiers",
  "authors": [
    {
      "name": "Félix Gómez López",
      "email": "felix.gomez.lopez@gmail.com",
      "homepage": "https://felixgomez.eu"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-intl": "*",
    "ext-json": "*",
    "symfony/console": "^6.1",
    "symfony/config": "^6.1",
    "symfony/yaml": "^6.1",
    "symfony/dotenv": "^6.1",
    "symfony/dependency-injection": "^6.1",
    "guzzlehttp/guzzle": "^7.5",
    "guzzlehttp/oauth-subscriber": "^0.6.0",
    "lambdish/phunctional": "^v2.1.0",
    "monolog/monolog": "^3.2.0"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Vigotech\\": "src/"
    }
  },
  "require-dev": {
    "symfony/var-dumper": "^6.1",
    "friendsofphp/php-cs-fixer": "^v3.13.0"
  },
  "scripts": {
    "fix-cs": "php ./vendor/bin/php-cs-fixer --verbose --config=.php-cs-fixer.dist.php --using-cache=no fix"
  }
}
